@{
    ViewData["Title"] = "Home Page";
}
<div class="div-container row row-cols">
  @foreach (var item in ViewBag.Libros)
  {
      <div class="card " style="width: 18rem;">
          <div class="img-container">
            <img src="@item.Imagen" class="card-img-top " alt="...">
          </div>

          <div class="card-body">
              <h5 class="card-title">@item.Titulo</h5>
              <button type="button" style="margin: 3px" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalLibro" onclick="MostrarInfoLibro(@item.IDLibro)">Ver detalle del Libro</button>
              <button type="button" style="margin: 3px" class="btn btn-primary">Comprar</button>
          </div>
      </div>
  }
  <div class="modal fade" id="ModalLibro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5"  id="TituloLibro">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body"> 
          <div></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
</div>