@{
    ViewData["Title"] = "Perfil";
}

<div id="profile-container">
        <h1>Perfil</h1>
        <div id="profile-info">
            <label>Nombre de usuario: @ViewBag.InfoUsuario.NombreUsuario</label>

            <label>ID de usuario: @ViewBag.InfoUsuario.IDUsuario</label>
            
            <label>Email: @ViewBag.InfoUsuario.Gmail</label>

        <button class="button" type="button" style="margin: 3px" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalHistorial" onclick="MostrarHistorialCompras(@ViewBag.InfoUsuario.IDUsuario)">Ver historial de compras</button>
        </div>
    </div>
<div class="modal fade" id="ModalHistorial" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5">Historial de compras</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" ID="infoHistorial"> 
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
