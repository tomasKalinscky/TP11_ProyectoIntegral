<div class="login-wrap" style="margin-top: 10%">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Recuperar contraseña</label>
		<form Action='@Url.Action("olvide","account")' class="login-form">
			<div class="group">
					<label for="user" class="label">Usuario</label>
					<input id="user" name="usuario" type="text" class="input">
				</div>
			<div class="group">
				<label for="pass" class="label">Ingrese la nueva contraseña</label>
				<input id="pass" name="contraseña" type="password" class="input" data-type="password">
			</div>
			<div class="group">
				<label for="pass" class="label">Repita la nueva contraseña</label>
				<input id="pass" type="password" class="input" data-type="password">
			</div>
			<div class="group">
				<input type="submit" class="button" value="Cambiar contraseña">
			</div>
		</form>
	</div>
</div>